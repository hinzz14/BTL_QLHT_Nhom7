@model IEnumerable<TLoaiThuoc>

<div class="container-fluid">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 " style="position : relative; z-index:2"> @await Component.InvokeAsync("LoaiThuocMenu")</div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold text-light"><span class="font-weight-bold border px-3 mr-1"></span>Pharasmy</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0">
                        <a asp-controller="Shopping" asp-action="Index" class="nav-item nav-link ">Trang chủ</a>
                        <a asp-controller="Shopping" asp-action="Shop" class="nav-item nav-link ">Mua sắm</a>
                       
                        <div class="nav-item ">
                            <a href="#" class="nav-link dropdown-toggle active " data-toggle="dropdown">Thanh toán</a>
                            <div class="dropdown-menu rounded-0 mt-0">
                                <a asp-controller="Cart" asp-action="ShoppingCart" class="dropdown-item">Hoá đơn</a>
                                <a asp-controller="Cart" asp-action="CheckOut" class="dropdown-item">Thông tin thanh toán</a>
                            </div>
                        </div>
                        <a asp-controller="Shopping" asp-action="Contact" class="nav-item nav-link">Liên Hệ</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Login" asp-action="Logout" class="nav-item nav-link ">Đăng xuất</a>
                        }
                        else
                        {
                            <a asp-controller="Login" asp-action="Index" class="nav-item nav-link ">Đăng Nhập</a>
                        }

                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>