                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                   @*  <div class="form-group form-inline">
                        <h3 class="box-title">Sản Phẩm</h3>
                        <form class="form-inline" asp-controller="Thuoc" asp-action="Product">
                            <div class="form-group">
                               
                                <input type="text" name="Searchkey" class="form-control" placeholder="Từ khóa tìm kiếm" />
                            </div>
                            <input type="submit" name="submit" value="Tìm Kiếm" class="btn btn-success" />
